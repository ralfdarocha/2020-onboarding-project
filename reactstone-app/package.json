{
  "name": "reactstone-app",
  "version": "1.0.0",
  "description": "2020 onboarding project",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --mode development --open --config webpack.dev.ts",
    "build": "jest && webpack --mode production --config webpack.prod.ts",
    "test": "jest",
    "test:update": "jest --updateSnapshot"
  },
  "author": "Ralf da Rocha",
  "license": "ISC",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "transform": {
      "\\.(jpg|jpeg|png|gif|svg)$": "jest-url-loader",
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.[jt]sx?$",
    "setupFilesAfterEnv": [
      "<rootDir>src/setupTests.ts"
    ]
  },
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "@babel/runtime": "^7.12.1",
    "@types/redux-logger": "^3.0.8",
    "normalize-scss": "^7.0.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-shadow-dom-retarget-events": "^1.0.11",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@types/enzyme": "3.10.8",
    "@types/html-webpack-plugin": "^3.2.4",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "@types/react-test-renderer": "^16.9.3",
    "@types/redux": "^3.6.0",
    "@types/redux-mock-store": "^1.0.2",
    "@types/webpack": "^4.41.23",
    "@wojtekmaj/enzyme-adapter-react-17": "0.3.1",
    "babel-loader": "^8.1.0",
    "copy-webpack-plugin": "^6.2.1",
    "css-loader": "^5.0.0",
    "enzyme": "3.11.0",
    "enzyme-to-json": "3.6.1",
    "html-webpack-plugin": "^4.5.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.1",
    "jest-fetch-mock": "3.0.3",
    "jest-url-loader": "^0.1.0",
    "node-sass": "^4.14.1",
    "react-test-renderer": "^17.0.1",
    "redux-mock-store": "^1.5.4",
    "sass": "^1.27.0",
    "sass-loader": "^10.0.4",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.4.3",
    "ts-loader": "^8.0.7",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "url-loader": "^4.1.1",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
